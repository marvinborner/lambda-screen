t-square-1 [[build tl tr bl br] mut]
	mut y* ([[[[build 3 2 1 b]]]] : ([[[[build 3 2 b 0]]]] : ([[[[build 3 b 1 0]]]] : {}[[[[build b 2 1 0]]]])))
	tl ^0
	tr ^(~0)
	bl ^(~(~0))
	br ^(~(~(~0)))

