t-square-2 [[build tl tr bl br] mut]
	mut y* ([[[[build 3 2 1 (build b w w b)]]]] : ([[[[build 3 2 (build w b b w) 0]]]] : ([[[[build 3 (build w b b w) 1 0]]]] : {}[[[[build (build b w w b) 2 1 0]]]])))
	tl ^0
	tr ^(~0)
	bl ^(~(~0))
